body
    background: #e5e5e5;

.content.seller-content
    position: relative;
    background: #e5e5e5;

    &.seller-content-footer-large-fixed
        padding-bottom: 77px;

    &.seller-content-footer-min-fixed
        padding-bottom: 25px;

/**
 * lazyload
 */
.img-wrap-lazy
    background: #efefef url("/src/static/media/st.png") center center no-repeat;
    background-size: 50%;
/**
 * 头部搜索模块
 */
.seller-search
    padding-top: 10px;
    height: 50px;
    display: -webkit-box;
    background: #fff;

    .logo-wrap
        width: 70px;

        img 
            // width: 90%;
            height: 40px;
            display: block;
            margin: 0 auto;

    .input-wrap
        -webkit-box-flex: 1;
        padding-left: 10px;
        position: relative;

        input
            width: 100%;
            height: 30px;
            border: 1px solid #dbdbdb;
            border-radius: 5px;
            padding-left: 30px;
            line-height: 30px;
            box-shadow: none;
            -webkit-appearance: none;

        .icon-search
            font-size: 20px;
            position: absolute;
            left: 15px;
            top: 3px;
            color: #ff5a00;

        .icon-circle-cross
            position: absolute;
            font-size: 20px;
            right: 5px;
            top: 3px;
            color: #666;
            display: none;

    .history-wrap
        width: 40px;

        a
            color: #666;
            font-size: 20px;
            padding: 3px 10px 10px 10px;

    .type-wrap
        width: 40px;

        a
            color: #666;
            font-size: 20px;
            padding: 3px 10px 10px 10px;

/**
 * 导航模块
 */
.seller-nav
    padding: 0 20px;
    display: -webkit-box;
    border-bottom: 1px solid #dbdbdb;
    background: #fff;

    .nav-item
        -webkit-box-flex: 1;
        display: block;
        text-align: center;
        border-bottom: 1px solid #dbdbdb;
        margin-bottom: -1px;
        line-height: 40px;
        color: #333;

        &.active
            border-color: #ff5a00;
            color: #ff5a00;

    .nav-item-my

        .my-text
            position: relative;
            display: inline-block;

        .seller-my-count
            position: absolute;
            right: -13px;
            top: 0;
            color: #fff;
            background: #ff0000;
            display: block;
            width: 15px;
            height: 15px;
            border-radius: 10px;
            line-height: 15px;
            font-style: normal;
            font-size: 12px;
            display: none;

            &.large
                padding: 0 5px;
                width: auto;
                right: -22px;

/**
 * 头部
 */
.seller-mask
    display: none;
    position: fixed;
    right: 0;
    top: 0;
    bottom: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 98;

.seller-header
    background: #fff;
    border-bottom: 1px solid #e6eaef;
    font-size: 15px;
    height: 41px;

    &.bar
        position: relative;        

    .title
        position: absolute;
        display: block;
        width: 100%;
        padding: 0;
        margin: 0 -0.5rem;
        font-weight: 500;
        line-height: 41px;
        color: #3d4145;
        text-align: center;
        white-space: nowrap;
        font-size: 15px;

        a
            color: inherit;
        

    .pull-left
        line-height: 41px;
        color: #333;
        float: left;
        position: relative;
        z-index: 10;

        .icon-sm
            color: #ff5a00;
            vertical-align: 1px;
            margin: 0 5px;

    .pull-right
        line-height: 41px;
        color: #666;
        float: right;
        position: absolute;
        z-index: 10;
        padding: 0 5px;
        min-width: 60px;
        display: block;
        right: 0;
        text-align: right;

        i
            font-size: 20px;
            vertical-align: 2px;
            margin: 0 5px;

    .seller-nav-list
        position: absolute;
        right: 10px;
        top: 30px;
        z-index: 99;
        background: #fff;
        border: 1px solid #efefef;
        font-size: 14px;
        border-radius: 5px;
        display: none;
        overflow: hidden;

        a
            display: block;
            text-align: center;
            width: 120px;
            padding: 10px 0;
            color: #333;

        li
            border-bottom: 1px solid #efefef;

            &:list-child
                border-bottom: none;

/**
 * footer 部分
 */
.seller-footer
    padding: 0.3rem 0.35rem;
    background: #ff5a00;

    &.seller-footer-fixed
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;

    .action-container
        text-align: center;

        .button-orange
            padding: 0.3rem 1.4rem;
            background: #ff5a00;
            border: 1px solid #fff;
            border-radius: 5px;
            color: #fff;
            font-size: 14px;
            display: inline-block;

            &:last-child
                margin-left: 38px;

    .seller-text
        margin-top: 0;
        margin-bottom: 0;
        font-size: 12px;
        color: #fff;
        text-align: center;

        a
            color: #fff;

    .footer-action
        padding: 5px 0 15px 0;
        text-align: center;

        a
            display: inline-block;
            padding: 5px 25px;
            color: #fff;
            border: 1px solid #fff;
            border-radius: 5px;
            margin-right: 20px;

/**
 * 右侧固定按钮
 */
.seller-right-fixed
    position: fixed;
    right: 5px;
    bottom: 60px;

    .action-top,
    .action-about
        display: none; 
        background: rgba(0,0,0,0.6);
        width: 50px;
        height: 50px;
        text-align: center;
        color: #fff;
        border-radius: 25px;
        padding-top: 7px;
        font-size: 12px;
        margin-bottom: 10px;

        i
            display: block;
            
    .action-about i
        font-size: 18px;

/**
 * 通用 title 样式
 */
.seller-item
    background: #fff;
    padding: 8px 5px 8px 5px; 
    background-color: #fff;

    .title
        font-size: 15px;
        border-left: 4px solid #ff5a00;
        margin-bottom: 10px;
        color: #ff5a00;
        padding-left: 10px; 

    .item-wrap 
        &.loading
            min-height: 200px;
            background: #fff url("/src/static/media/load.gif?__inline") no-repeat center center;

/**
 * 课程 common 类型
 */
.common-course-list
    .common-course-item
        float: left;
        overflow: hidden;
        margin-bottom: 10px;
        position: relative;

    .item-wrap

        .img-wrap
            padding-bottom: 60%;
            overflow: hidden;
            display: block;
            position: relative;
            margin-bottom: 5px;

            img 
                position: absolute;
                width: 100%;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;

        .course-name
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
            padding: 0px 5px;
            margin-bottom: 2px;

            a
                color: #333;

        .course-price
            padding: 0 5px;
            color: #ff5a00;


/**
 * 活动列表基础样式
 */
.common-events-list
    li
        float: left;
        margin-bottom: 10px;

        a
            text-decoration: none;

        .item-wrap
            display: block;
            text-decoration: none;
            background: #fff; 

        .img-wrap
            padding-top: 78%;
            margin-bottom: 5px;
            display: block;
            position: relative;

            img
                position: absolute;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;

            .bottom-info
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                font-size: 12px;
                line-height: 20px;
                overflow: hidden;
                background: rgba(0, 0, 0, 0.6);
                color: #fff;
                padding: 0 3px;

                .desc
                    float: left;

                .count
                    float: right;

                    em
                        font-style: normal;
                        color: #ff5a00; 

                .icon-play
                    vertical-align: 2px;

        .text-wrap
            position: absolute;
            left: 0;
            bottom: 0;
            right: 0;
            top: 0;

            .action-event
                color: #fff;
                text-align: center;
                display: block;
                padding: 0 10px;
                line-height: 18px;
                margin: 30% auto;
                border-radius: 16px;
                width: 120px;
                font-size: 18px;
                background: rgba(255, 90, 0, 0.6);
                line-height: 32px;

                &.action-event-finished
                    background: rgba(118,121,118,0.6);

        .common-event-bottom
            padding-left: 5px;

            .name
                color: #333;
                overflow: hidden;
                margin-bottom: 5px;
                white-space: nowrap;
                text-overflow: ellipsis;
                height: 20px;
                line-height: 20px;

            .summary-info
                margin-bottom: 5px;

                i
                    font-size: 14px;

                p
                    margin-bottom: 5px;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    overflow: hidden;

                font-size: 12px;
                color: #999;




/**
 * 套餐卡片
 */
.common-set
    overflow: hidden;

    .common-set-item
        float: left;
        margin-bottom: 10px;


    .img-wrap
        padding-bottom: 60%;
        overflow: hidden;
        display: block;
        position: relative;
        margin-bottom: 5px;

        img 
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;    

        .set-tip
            position: absolute;
            right: 0;
            top: 0;
            width: 60px;
            height: 60px;
            -webkit-transform: rotate(45deg) translateY(-45px) scale(0.9);
            display: block;
            color: #fff;
            background: #ff5a00;
            text-align: center;
            line-height: 100px;
            font-size: 12px;


    .set-item-detail
        font-size: 12px;

        .price
            color: #ff5a00;
            font-size: 14px;

        .price-ori
            color: #999;
            font-size: 12px;
            text-decoration: line-through;


        .course-count
            color: #666;
            font-size: 12px;

/**
 * btn 组
 */
.btn 
    display: inline-block;
    border: 1px solid #999;
    text-align: center;
    line-height: 33px;
    color: #999;
    background: #fff;
    height: 35px;
    border-radius: 5px;

    &.btn-orange
        border-color: #ff5a00;
        color: #fff;
        background: #ff5a00;

    &.btn-orange-line
        border-color: #ff5a00;
        background: #fff;
        color: #ff5a00;


/**
 * 课程导航
 */
.seller-course-mask
    display: none;
    position: fixed;
    right: 0;
    top: 45px;
    bottom: 0;
    left: 0;
    z-index: 98;
    background: rgba(0, 0, 0, 0);
    overflow: hidden;

    &.seller-course-mask-show
        display: block;

        .coruse-nav-container
            display: block;

.coruse-nav-container
    display: none; 
    padding: 20px 5px 10px 5px;
    background: rgba(0, 0, 0, 0.8);

    .recommend-tag
        display: -webkit-box;
        margin-bottom: 10px;

        .tag-item
            display: block;
            -webkit-box-flex: 1;
            text-align: center;

            &:first-child
                text-align: left;

            &:last-child
                text-align: right;

            .btn
                width: 80px;
                background: transparent;
                color: #fff;
                border-color: #fff;
                border-radius: 30px;
                height: 25px;
                line-height: 23px;

    .nav-tag-list
        li
            margin-bottom: 10px;

        .type-name
            margin-bottom: 5px;

            a
                color: #ff5a00;

        li.nav-tag-item-large

            a
                width: 33%;

        .nav-tag-content
            overflow: hidden;

            a
                float: left;
                padding-bottom: 5px;
                color: #fff;
                display: inline-block;
                height: 25px;
                width: 25%;
                overflow: hidden;


